{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "dist"],
  "include": ["*.ts"]
}
